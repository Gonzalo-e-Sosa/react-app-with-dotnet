{
  // Hereda todas las opciones de compilaci√≥n de la app
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.testing.tsbuildinfo",
    // Asegura que reconoce los globals de Vitest
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  // Solo compila lo necesario para testing
  "include": [
    "__tests__",
    "__stories__",
    "src/global.d.ts",
    "./vitest.config.ts"
  ]
}